---
interface Testimonial {
  quote: string;
  name: string;
  position: string;
  company: string;
  industry: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "CSA's expertise in functional safety has been invaluable to our autonomous vehicle development. Their comprehensive approach to safety compliance has helped us achieve our certification goals efficiently.",
    name: "Sarah Johnson",
    position: "Safety Director",
    company: "AutoTech Solutions",
    industry: "Automotive"
  },
  {
    quote: "The team at CSA provided exceptional guidance in implementing our safety critical systems. Their FMEA and FTA support was thorough and helped us identify potential risks early in the development process.",
    name: "Michael Chen",
    position: "Engineering Manager",
    company: "Industrial Robotics Inc",
    industry: "Manufacturing"
  },
  {
    quote: "Working with CSA has transformed our approach to functional safety. Their training programs and consulting services have significantly improved our team's capabilities in safety engineering.",
    name: "David Rodriguez",
    position: "Technical Director",
    company: "Smart Systems Ltd",
    industry: "Industrial Automation"
  }
];
---

<section class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-primary-100 text-center text-3xl font-bold tracking-tighter text-balance sm:text-4xl">
      What Our Clients Say
    </h2>
    <p class="text-primary-400 mx-auto mt-4 max-w-prose text-center leading-relaxed sm:text-lg">
      Trusted by industry leaders for functional safety and systems engineering excellence
    </p>
    <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        testimonials.map((testimonial) => (
          <div class="bg-primary-800 border-primary-700 flex flex-col rounded-lg border p-8">
            <div class="flex-1">
              <p class="text-primary-300 text-lg leading-relaxed">
                "{testimonial.quote}"
              </p>
            </div>
            <div class="mt-6">
              <p class="text-primary-100 font-semibold">{testimonial.name}</p>
              <p class="text-primary-400 text-sm">{testimonial.position}</p>
              <p class="text-primary-400 text-sm">{testimonial.company}</p>
              <p class="text-blue-500 text-sm mt-1">{testimonial.industry}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section> 